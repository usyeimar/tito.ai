# Daily.co Configuration
DAILY_API_KEY=your_daily_api_key
DAILY_API_URL=https://api.daily.co/v1

# Default Bot Configuration
BOT_NAME=Marissa
BOT_TYPE=flow # flow, simple, multimodal

# LLM Providers (Choose one or more)
LLM_PROVIDER=google # google, openai, anthropic, groq, together, mistral
LLM_MODEL=gemini-2.0-flash-exp
LLM_TEMPERATURE=0.7

# Google Gemini
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MODEL=gemini-2.0-flash-exp

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Groq
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-70b-versatile

# Together AI
TOGETHER_API_KEY=your_together_api_key
TOGETHER_MODEL=meta-llama/Meta-Llama-3.1-70B-Instruct-Turbo

# Mistral AI
MISTRAL_API_KEY=your_mistral_api_key
MISTRAL_MODEL=mistral-large-latest

# STT Providers
STT_PROVIDER=deepgram # deepgram, gladia, assemblyai, groq
DEEPGRAM_API_KEY=your_deepgram_api_key
GLADIA_API_KEY=your_gladia_api_key
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# TTS Providers
TTS_PROVIDER=deepgram # deepgram, cartesia, elevenlabs, playht, rime, openai, azure
CARTESIA_API_KEY=your_cartesia_api_key
ELEVENLABS_API_KEY=your_eleven_labs_api_key
PLAYHT_API_KEY=your_playht_api_key
PLAYHT_USER_ID=your_playht_user_id
RIME_API_KEY=your_rime_api_key

# AWS (for Nova Sonic)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Ultravox
ULTRAVOX_API_KEY=your_ultravox_api_key

# Features
ENABLE_STT_MUTE_FILTER=false
